<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FollowPageActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        app:tint="@color/our_blue" />
    //madison's new code start

    <TextView
        android:id="@+id/followteamspage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:gravity="center"
        android:text="Your Teams"
        android:textColor="@color/our_blue"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/customborder">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_sports_soccer_24"
            android:background="@color/white"
            android:text="home"/>

        <ImageButton
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_search_24"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/follow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_star_24"
            android:background="@color/white"
            app:tint="@color/our_blue"/>
    </LinearLayout>

    <EditText
        android:id="@+id/myteams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/followteamspage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-5dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="2dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/small_search"
        android:drawablePadding="20dp"
        android:elevation="4dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Search"
        android:padding="20dp"
        android:shadowColor="#101010"
        android:textColor="@color/black"
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myteams"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ECECEC"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/barcelonaFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/barcelona"
            android:drawablePadding="20dp"
            android:text="Barcelona F.C."
            android:textColor="@color/our_grey"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ECECEC"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/RangersFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/west_ham"
            android:drawablePadding="20dp"
            android:text="West Ham Utd"
            android:textColor="@color/our_grey"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ECECEC"
            android:padding="10dp"/>
    </LinearLayout>
</RelativeLayout>