<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MadridActivity"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/backButton_lisb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        app:tint="@color/our_blue" />

    // Title

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            //Lisbon results title

            <TextView
                android:id="@+id/lisbonresults"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:gravity="center"
                android:text="LISBON\nRESULTS"
                android:textColor="@color/our_blue"
                android:textSize="35dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECECEC" />
            //Primeira Liga

            <TextView
                android:id="@+id/premliga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:padding="20dp"
                android:text="Primeira Liga"
                android:textColor="#060CB4"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECECEC" />
            // date 1

            <TextView
                android:id="@+id/portfix1date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="20dp"
                android:padding="20dp"
                android:text="13/06/2022"
                android:textColor="@color/our_blue"
                android:textSize="15sp" />
            //Fixture 1

            <TextView
                android:id="@+id/portfix1teams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/benfica"
                android:drawableRight="@drawable/sporting"
                android:drawablePadding="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:padding="20dp"
                android:text="Benfica vs Sporting"
                android:textColor="#060CB4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECECEC" />

            //DATE 2

            <TextView
                android:id="@+id/portfix2date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="20dp"
                android:padding="20dp"
                android:text="14/06/2022"
                android:textColor="#060CB4" />
            //fixture 2

            <TextView
                android:id="@+id/portfix2teams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@drawable/beleneses"
                android:drawableRight="@drawable/porto"
                android:drawablePadding="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:padding="20dp"
                android:text="Beleneses Vs Porto"
                android:textColor="#060CB4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECECEC" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="end of search results" />
        </LinearLayout>
    </ScrollView>


    //madison's new code start

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/customborder">

    `

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_sports_soccer_24"
            android:text="home"
            tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_search_24"
        android:background="@color/white"
        app:tint="@color/our_blue"/>

    <ImageButton
        android:id="@+id/follow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_star_24"
        android:background="@color/white" />
    </LinearLayout>

</RelativeLayout>
